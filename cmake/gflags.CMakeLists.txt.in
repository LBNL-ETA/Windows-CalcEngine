cmake_minimum_required(VERSION 3.5)

include(ExternalProject)

project( gflags-download NONE )

ExternalProject_Add(GFlagsExternal
    GIT_REPOSITORY https://github.com/gflags/gflags
    GIT_TAG "v2.2.2"

    UPDATE_COMMAND ""
    PATCH_COMMAND git apply "${CMAKE_SOURCE_DIR}/patches/gflags.patch"

    SOURCE_DIR "${CMAKE_BINARY_DIR}/gflags-src"
    BINARY_DIR "${CMAKE_BINARY_DIR}/gflags-build"

    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""

    LOG_DOWNLOAD ON
)
